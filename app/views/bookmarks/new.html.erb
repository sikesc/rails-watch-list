<div class="header-new">
</div>
<div class="container container-form mt-4">
  <div class="title">
    <h1>Add a Movie to List</h1>
  </div>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <div class="d-grid gap-2">
      <%= f.submit 'Add', class: 'btn btn-success mt-3' %>
    </div>
  <% end %>
  <div class="d-grid gap-2 mt-3">
    <%= link_to "Home", lists_path, class: "btn btn-warning" %>
  </div>
</div>
